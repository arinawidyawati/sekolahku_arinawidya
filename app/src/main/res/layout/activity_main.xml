<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:background="#057066">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="400dp"
            android:layout_height="127dp"
            app:srcCompat="@drawable/download" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="SMK SYAFI'I AKROM"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="Kota Pekalongan"
            android:textColor="#131313"
            android:textSize="20dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"


        android:layout_height="644dp"
        android:background="#139C8F"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#0E433D"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="88dp"
                        android:layout_height="78dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/jadwal" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="80dp"
                        android:layout_height="41dp"
                        android:layout_margin="85dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="40dp"
                        android:text="Jadwal"
                        android:textSize="20dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#0E453F"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="83dp"
                        android:layout_height="78dp"
                        android:layout_marginLeft="45"
                        android:layout_marginTop="5"
                        android:layout_marginBottom="20"
                        app:srcCompat="@drawable/data" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_margin="85dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="40dp"
                        android:text="Data Guru"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#055049"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="90dp"
                        android:layout_height="77dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/jurusan" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="87dp"
                        android:layout_height="40dp"
                        android:layout_margin="85dp"
                        android:text="Jurusan"
                        android:textSize="20dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#03403A"
                    app:cardCornerRadius="20dp" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="79dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/lokasi" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="92dp"
                        android:layout_height="42dp"
                        android:layout_margin="85dp"
                        android:text="Lokasi"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#05574F"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/aktivitas" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="83dp"
                        android:layout_height="43dp"
                        android:layout_margin="95dp"
                        android:text="Aktivitas" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#145751"
                    app:cardCornerRadius="20dp" >

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="83dp"
                        android:layout_height="98dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/coaching" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="71dp"
                        android:layout_height="45dp"
                        android:layout_margin="90dp"
                        android:text="Galeri"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>