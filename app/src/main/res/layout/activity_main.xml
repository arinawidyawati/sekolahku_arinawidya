<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#057066">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="129dp"
            android:layout_height="193dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/download" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"


        android:layout_height="644dp"
        android:background="#139C8F"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#0E433D"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/jadwal" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#1C5751"
                    app:cardCornerRadius="20dp" >

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="45"
                        android:layout_marginTop="5"
                        android:layout_marginBottom="20"
                        app:srcCompat="@drawable/data" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#055049"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/jurusan" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#03403A"
                    app:cardCornerRadius="20dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>